{
	"name": "pathfinding",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "concurrently 'vite dev' npm:watch:wasm npm:watch:pkg",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"watch:pkg": "cd wasm && cargo watch -w pkg --no-vcs-ignores -- cp pkg ../src -r",
		"watch:wasm": "cd wasm && cargo watch -- wasm-pack build --target web"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-netlify": "^2.0.6",
		"@sveltejs/adapter-node": "^1.2.3",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.5.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"concurrently": "^8.0.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"less": "^4.1.3",
		"postcss": "^8.4.23",
		"postcss-less": "^6.0.0",
		"postcss-load-config": "^4.0.1",
		"postcss-nesting": "^11.2.2",
		"postcss-sorting": "^8.0.2",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"stylelint": "^15.6.0",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte-preprocess": "^5.0.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.2.0"
	},
	"type": "module"
}
